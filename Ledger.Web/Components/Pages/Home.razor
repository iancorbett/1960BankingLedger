@page "/"
@inject NavigationManager Nav  

<section class="landing-hero">
  <div class="container text-center py-5">
    <h1 class="display-4 fw-bold mb-3">1960Ledger</h1>
    <p class="lead mb-4">Old-school simplicity, modern speed. Track credits & debits with zero fluff.</p>
<div class="text-center mt-4">
  <div class="d-inline-flex gap-3">
    <a class="btn btn-primary btn-lg px-4" href="/signup">
      <i class="bi bi-person-plus-fill me-2"></i>Sign Up
    </a>
    <a class="btn btn-outline-dark btn-lg px-4" href="/login">
      <i class="bi bi-box-arrow-in-right me-2"></i>Login
    </a>
  </div>
</div>

  </div>
</section>

<section class="container py-5">
  <div class="row g-4">
